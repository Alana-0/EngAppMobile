<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blue">

    <FrameLayout
        android:id="@+id/pacmanView"
        android:layout_width="364dp"
        android:layout_height="481dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:elevation="10dp"/>
    <!--
    <com.myapps.pacman.ui.PacmanView
        android:id="@+id/pacmanView"
        android:layout_width="364dp"
        android:layout_height="481dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:elevation="10dp">
    </com.myapps.pacman.ui.PacmanView>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlButtons"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pacmanView"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/upButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
            android:src="@drawable/arrow_up"
            android:contentDescription=" ">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/buttonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/upButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/leftButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/arrow_left"
                android:contentDescription=" ">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/downButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/arrow_down"
                android:layout_marginHorizontal="5dp"
                android:contentDescription=" "/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/rightButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/arrow_right"
                android:contentDescription=" ">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/controlButtons"
        app:layout_constraintTop_toBottomOf="@id/pacmanView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/play_arrow"
        android:contentDescription=" ">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/stopGame"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/baseline_stop_circle_24"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription=" ">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>