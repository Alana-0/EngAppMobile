<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/depth_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa inferior: Sombra para simular profundidad -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Color de la sombra -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>

    <!-- Capa superior: Fondo y borde -->
    <item android:bottom="2dp" android:right="2dp"> <!-- Ajuste para crear la sombra -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo -->
            <stroke
                android:width="5dp"
                android:color="#888888" /> <!-- Borde -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
</layer-list>